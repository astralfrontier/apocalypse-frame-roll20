-
  var attributes = [
    {
      attr: "drive",
      label: "Drive",
      adjectives: "Forceful, direct, sweeping, powerful",
      contributes: "Vigor"
    },
    {
      attr: "speed",
      label: "Speed",
      adjectives: "Quick, reactive, reflexive, immediate",
      contributes: "Tension"
    },
    {
      attr: "control",
      label: "Control",
      adjectives: "Expert, skillful, technical, deliberate",
      contributes: "Fuel"
    }
  ]

+section("Attributes")
  each entry in attributes
    .columns.is-vcentered
      .column.is-narrow
        +numberfield_v(`attr_${entry.attr}`, entry.label)
          +rollbutton("af", {"name": entry.label, "roll": `[[@{${entry.attr}}d6kh1]]`})
      .column
        span= entry.adjectives
        br
        strong= entry.label
        span= ` contributes to ` 
        strong= `Maximum ${entry.contributes}`
  p
    strong Put 3 in one Attribute, 2 in another, and 1 in the third.